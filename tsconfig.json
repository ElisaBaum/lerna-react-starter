{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom", "es6"],
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "pretty": true
  },
  "include": [
    "config",
    "packages"
  ],
  "exclude": [
    "node_modules",
    "packages/**/node_modules",
    "packages/**/*.spec.ts*"
  ]
}